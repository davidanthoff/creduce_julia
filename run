#!/bin/bash -uxe

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
REPRO=$DIR/src

if [[ $(pwd) == $DIR ]]; then
    cd $REPRO
    rm -rf .julia
else
    cp -n $REPRO/* .
fi

TEMP=$(pwd)

JULIA_LOAD_PATH=$TEMP \
JULIA_PKGDIR=$TEMP/.julia \
JULIA_DEPOT_PATH=$TEMP/.julia \
julia --depwarn=no -O0 -g0 -e 'using DataFrames'
